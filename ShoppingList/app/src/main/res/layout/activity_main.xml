<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#9bef1e">

    <TextView
        android:id="@+id/BBShoppingListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BB Shopping List"
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_below="@id/shoppingCartImage"
        />

    <ImageView
        android:id="@+id/shoppingCartImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="125dp"
        android:src="@drawable/shoppingcart" />

    <ImageView
        android:id="@+id/PlayImageButton"
        android:src="@drawable/baseline_play_circle_outline_black_48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BBShoppingListText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        />


</RelativeLayout>